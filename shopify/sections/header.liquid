<header class="flex flex-col w-full">
  <div class="w-full" data-vue-mount="header-slider" data-props='{"slides": {{ section.blocks | map: "settings" | json }}, "autoplay": {{ section.settings.slider_autoplay | json }}, "showIndicators": {{ section.settings.slider_show_indicators | json }}}'></div>
  <div class="header__container w-full flex justify-between items-center py-4 px-2 md:px-0">
    <button 
      class="header__menu-toggle" 
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="header-menu"
      id="header-menu-toggle"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M3 12h18M3 6h18M3 18h18"/>
      </svg>
    </button>

    <div class="header__title text-2xl font-bold text-white">
      {% if section.settings.logo %}
        <a href="{{ routes.root_url }}">
          <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="header-logo" width="200" height="200" loading="lazy">
        </a>
      {% else %}
        {{ shop.name | link_to: routes.root_url }}
      {% endif %}
    </div>

    <nav class="header__menu" id="header-menu" role="navigation" aria-label="Main navigation">
      {% if section.settings.menu and section.settings.menu.links %}
        {% for link in section.settings.menu.links %}
          {{ link.title | link_to: link.url }}
        {% endfor %}
      {% endif %}
    </nav>

    <div class="header__icons">
      {% if shop.customer_accounts_enabled %}
        {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
      {% endif %}

      <a href="{{ routes.cart_url }}" class="header__cart-link" aria-label="Cart">
        {{ 'icon-cart.svg' | inline_asset_content }}
        {% if cart.item_count > 0 %}
          <span class="header__cart-count" aria-label="{{ cart.item_count }} items in cart">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </div>
</header>

{% stylesheet %}
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  
  .header__cart-link {
    position: relative;
    display: inline-flex;
    align-items: center;
  }
  
  .header__cart-count {
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
    background: var(--color-foreground, #000);
    color: var(--color-background, #fff);
    border-radius: 50%;
    min-width: 1.25rem;
    height: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: bold;
    padding: 0 0.25rem;
    line-height: 1;
  }
  
  header .header-logo {
    height: auto;
    max-height: 3rem;
    width: auto;
    display: block;
  }
  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .header__title {
    text-align: center;
  }

  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

  /* Mobile Menu Toggle */
  .header__menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-foreground);
    flex-shrink: 0;
  }

  .header__menu-toggle svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .header__icons svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .header__container {
      position: relative;
    }

    .header__menu-toggle {
      display: block;
      width: 2.5rem;
    }

    .header__title {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      flex: 0 1 auto;
      width: auto;
    }

    header .header__menu {
      position: absolute;
      top: calc(100% + 2px);
      left: 0;
      right: 0;
      background: var(--color-background);
      flex-direction: column;
      padding: 1rem;
      gap: 0.5rem;
      display: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      z-index: 100;
      width: 0;
      opacity: 0;
      height: 100dvh;
      transform: translateX(-100%);
      transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      will-change: transform;
    }

    header .header__menu.is-open {
      display: flex;
      width: 100%;
      opacity: 1;
      transform: translateX(0);
      overflow-y: auto;
    }

    /* Prevent body scroll when menu is open */
    body:has(.header__menu.is-open) {
      overflow: hidden;
    }

    .header__menu a {
      padding: 0.75rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .header__icons {
      flex-shrink: 0;
    }
  }

  @media (min-width: 768px) {
    .header__icons svg {
      width: 2rem;
      height: 2rem;
    }
  }
{% endstylesheet %}

<script>
  (function() {
    const menuToggle = document.getElementById('header-menu-toggle');
    const menu = document.getElementById('header-menu');
    
    if (!menuToggle || !menu) return;
    
    menuToggle.addEventListener('click', function() {
      const isOpen = menu.classList.toggle('is-open');
      menuToggle.setAttribute('aria-expanded', isOpen);
    });
  })();
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "checkbox",
      "id": "slider_autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "slider_show_indicators",
      "label": "Show slide indicators",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Slide Description",
          "default": "Slide description text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
